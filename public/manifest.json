{
  "manifest_version": 3,
  "name": "Overstim Guard",
  "version": "0.1.0",
  "description": "Circadian-aware content intensity control.",
  "action": {
    "default_title": "Overstim Guard",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
