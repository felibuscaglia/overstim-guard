  "type": "module",
  "bugs": {
    "url": "https://github.com/felibuscaglia/overstim-guard/issues"
  },
  "homepage": "https://github.com/felibuscaglia/overstim-guard#readme",
  "devDependencies": {
    "@types/chrome": "^0.1.32",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  }
