{
  "name": "overstim-guard",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "build": "node scripts/build.mjs --prod && npm run typecheck && npm run lint",
    "dev": "node scripts/build.mjs --watch",
    "verify": "npm-run-all clean build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.mjs\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"scripts/**/*.mjs\"",
    "check": "npm-run-all typecheck lint format:check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felibuscaglia/overstim-guard.git"
  },
